<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].StartAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Pet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Vet)
