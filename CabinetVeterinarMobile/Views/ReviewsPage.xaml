<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CabinetVeterinarMobile.Views.ReviewsPage"
             Title="Reviews">
    <VerticalStackLayout Padding="12" Spacing="10">

        <Button Text="Back to Pets"
                BackgroundColor="LightGray"
                Clicked="OnBackToPetsClicked" />
        <Button Text="Add Review" Clicked="OnAddClicked" />

        <CollectionView x:Name="ReviewsCollection"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="12" Margin="0,0,0,8">
                        <VerticalStackLayout Spacing="2">
                            <Label Text="{Binding Rating}" FontAttributes="Bold" />
                            <Label Text="{Binding Text}" FontSize="12" LineBreakMode="TailTruncation" />
                            <Label Text="{Binding AppointmentId, StringFormat='AppointmentId: {0}'}" FontSize="12" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>