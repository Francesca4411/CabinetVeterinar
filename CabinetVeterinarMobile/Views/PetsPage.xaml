<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CabinetVeterinarMobile.Views.PetsPage"
                 
             Title="Pets">
    <VerticalStackLayout Padding="12" Spacing="10">

        <Button Text="Add Pet" Clicked="OnAddClicked" />
        <Button Text="Appointments" Clicked="OnAppointmentsClicked" />
        <Button Text="Reviews" Clicked="OnReviewsClicked" />

        <CollectionView x:Name="PetsCollection" SelectionMode="Single" SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="12" Margin="0,0,0,8">
                        <VerticalStackLayout Spacing="2">
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Label Text="{Binding Species}" FontSize="12" />
                            <Label Text="{Binding OwnerName}" FontSize="12" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>