<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CabinetVeterinarMobile.Views.PetsPage"
             Title="Pets">

    <Grid Padding="12" RowSpacing="10"
          RowDefinitions="Auto,Auto,Auto,*">

        <Button Text="Add Pet"
                Grid.Row="0"
                Clicked="OnAddClicked" />

        <Button Text="Appointments"
                Grid.Row="1"
                Clicked="OnAppointmentsClicked" />

        <Button Text="Reviews"
                Grid.Row="2"
                Clicked="OnReviewsClicked" />

        <CollectionView x:Name="PetsCollection"
                        Grid.Row="3"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="12" Margin="0,0,0,8">
                        <VerticalStackLayout Spacing="2">
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Label Text="{Binding Species}" FontSize="12" />
                            <Label Text="{Binding OwnerName}" FontSize="12" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>

</ContentPage>
